
    <article class='m-3 card' id='answer-<%= answer.id %>'>
      <div class='card-body'>
        <section class='card-text'>
          <small><time datetime="<%= answer.formatted_created_at %>">
            <%= answer.formatted_created_at %>
          </time></small>
          <p class='mt-2 mb-3'>
            <%= sanitize answer.body %>
          </p>
        </section>

        <%= link_to t('global.button.delete'), question_answer_path(question, answer), class: 'btn btn-danger btn-sm', data: {method: :delete, confirm: "Are you sure?"} %>
        <%= link_to t('global.button.edit'), edit_question_answer_path(question, answer), class: 'btn btn-secondary btn-sm' %>
      </div>
    </article>
