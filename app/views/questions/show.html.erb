<% provide :page_title, 'Question' %>
<% currently_at 'Questions' %>

<h1 class="mb-4"><%= @question.title %></h1>

<time datetime="<%= @question.formatted_created_at %>">
  <%= @question.formatted_created_at %>
</time>
<div  class="lead my-4">
  <%= sanitize  @question.body %>
</div>

<%= link_to "Show", question_path(@question), class: 'btn btn-primary' %>
<%= link_to "Edit", edit_question_path(@question), class: 'btn     btn-secondary' %>
<%= link_to 'Destroy', question_path(@question), data: {method: :delete,   confirm: 'Are you sure?'}, class: 'btn btn-danger' %>

<hr>

<h2 class='m-3'>Write your answer</h2>
<%= render 'answers/form', object: @answer %>

<h2 class='m-3'>Answers</h2>
<%= paginate @answers %>
  <%= render partial: 'answers/answer', collection: @answers, as: :answer, locals: {question: @question} %>
  <%= paginate @answers %>
